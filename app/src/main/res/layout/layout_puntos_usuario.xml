<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp">

    <LinearLayout
        android:id="@+id/linLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_start"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fortuna"
            android:textSize="25sp"
            android:textStyle="normal"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"/>
    </LinearLayout>

    <RelativeLayout
        android:background="#fff"
        android:layout_marginTop="55dp"
        android:id="@+id/relLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linLayout1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingTop="350dp"
            android:background="@color/probar">

        </RelativeLayout>

        <TextView
            android:id="@+id/tvTotalEstrellas"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15,000 estrellas"
            android:textSize="30sp"/>

        <ImageView
            android:id="@+id/imgCodUser"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_below="@+id/tvTotalEstrellas"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cod"/>

        <TextView
            android:id="@+id/tvSugerencia"
            android:layout_below="@+id/imgCodUser"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="270dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Antes de escanear dile a la barista que utilizaras tus estrellas como fortuna"
            android:textSize="15sp"/>
    </RelativeLayout>
</RelativeLayout>